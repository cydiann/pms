{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "pms-be/Dockerfile",
    "watchPatterns": [
      "pms-be/**"
    ]
  },
  "deploy": {
    "startCommand": "cd pms-be && ./entrypoint.sh",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}